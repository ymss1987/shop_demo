<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ymss.tinyshop.MainActivity">
   <LinearLayout
       android:gravity="center"
       android:paddingTop="10dp"
        android:background="#4A9DF8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <!--  <ImageView
            android:layout_gravity="center"
            android:src="@drawable/shopimage"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:src="@drawable/list_unselect_icon_3x"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />-->
       <com.ymss.view.CircleImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_centerInParent="true"
           android:src="@drawable/shopimage"
           app:border_width="2dp"
           app:border_color="#AAAAAA" />

    </LinearLayout>



    <LinearLayout
        android:background="#4A9DF8"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="自主lm5"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/icon_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/change_shop"
            android:layout_marginLeft="10dp"
            android:paddingBottom="2dp"
            android:textColor="#FFFFFF"
            android:text="切换店铺"
            android:background="@drawable/bottom_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#4A99dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_attestation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:text="店铺已认证"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="#AAAAAA"
            android:layout_width="1px"
            android:layout_height="20dp"></LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_attestation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:text="已实名认证"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="待处理订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="51"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="成交订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="快速收款"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="当前状态："
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="未连接"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/change_device"
                android:layout_marginLeft="10dp"
                android:text="切换"
                android:textColor="#4A9DF8"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_change_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="40dp"
                android:src="@drawable/sound_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_money"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:layout_width="200dp"
                android:layout_height="30dp" />
            <Button
                android:text="收款"
                android:textColor="#4f9ff5"
                android:textSize="15sp"
                android:background="@drawable/shape_button_style1"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </LinearLayout>

            <com.ymss.tinyshop.MyGridView
                android:id="@+id/gview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                ></com.ymss.tinyshop.MyGridView>
<View
    android:background="#e8e8e8"
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
